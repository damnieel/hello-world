/***学员信息展示列表***/
$(function(){
	tmLoading("加载中...",2);
	$.ajax({
		url: basePath+"student/studentPersonal/allStudentArchives.htmls",
		data:{
			"offset":0,
			"pageSize":10,
		},
		success:function(data){
			tmLoading("加载中...",2);
			$("#studentList").html(data).show();
			var count = $("#itemCount").val();
			tm_init_page(count);
		} 
	});
	 
	/***搜索触发事件***/
	$(".search_icon").click(function(){
		var title=$("#keyword").val();
		if(title.length>25){
			tmLoading("输入的文字过多",1);
			$("#keyword").select();
			return false;
		}
		$.ajax({
			url: basePath+"student/studentPersonal/allStudentArchives.htmls",
			data:{
				"keyWord":title,
				"offset" : 0,
				"pageSize": 10
			},
			success:function(data){
				tmLoading("加载中...",2);
				$("#studentList").html(data).show();
				var count = $("#itemCount").val();
				tm_init_page2(count);
			} 
		});
	});
	
	
	
	/**删除问卷调查记录**/
	$("body").on("click",".delet_specialty",function(){
		var id=$(this).data("id");
		tm_dialoag.confirm({title:"删除",content:"您确定删除吗?",height:170,callback:function(ok){
			if(ok){
			if(isEmpty(id)){
				tmLoading("删除失败",1);
			}
			 $.tpAjax.request({
				url:basePath + "student/studentPersonal/deleteStudentRepeat.htmls",
				callback:function(data){
					var data =eval("("+data+")");
					if(data == "success"){
						tmLoading("删除成功",1);
						$(this).parents(".removetr").slideUp("1000",function(){
						  $(this).remove();
						});
						setTimeout(function(){
							getStudentCount();
						},1000);
					}else if(data == "usuccess"){
						tmLoading("删除失败",1);
					}else if(data == "fail"){
						tmLoading("该记录有专业关联，请合并专业之后，再进行删除",1);
					}
				}
			},{"id":id});}
		}});
	});
	

	function getStudentCount(){
		var title=$("#keyword").val();
		var url = basePath+"student/studentPersonal/allStudentArchivesCount.htmls";
		$.post( url,
			  {
			    "keyWord":title,
				"offset" : 0,
				"pageSize": 10
				},
			function(count){
			tm_init_page(count);			
		});		
	}

});


/*** 分页的初始化方法 ***/
function tm_init_page(itemCount) {
	$("#page").pagination(itemCount, {
		num_edge_entries : 3, /***边缘页数***/
		num_display_entries : 3, /***主体页数***/
		current_page : 0,
		showGo:true,
		showSelect:true,
		is_search:false,
		items_per_page : 10, /***每页显示X项***/
		prev_text : "前一页",
		next_text : "后一页",
		callback : function(pageNo,psize) {
			tm_load_template(pageNo,psize);
		}
	});
};
function tm_init_page2(itemCount) {
	$("#page").pagination(itemCount, {
		num_edge_entries : 3, /***边缘页数***/
		num_display_entries : 3, /***主体页数***/
		current_page : 0,
		showGo:true,
		showSelect:true,
		is_search:true,
		items_per_page : 10, /***每页显示X项***/
		prev_text : "前一页",
		next_text : "后一页",
		callback : function(pageNo,psize) {
			tm_load_template(pageNo,psize);
		}
	});
};
/*** 分页模板 ***/
function tm_load_template(pageNo,psize,callback){
	var title=$("#keyword").val();
	$.ajax({
		url: basePath+"student/studentPersonal/allStudentArchives.htmls",
		data : {
			"offset" : pageNo*psize,
			"pageSize": psize,
			"keyWord":title
		},
		success : function(data) {
			    tmLoading("加载中...",2);
				$('#studentList').html(data).show();
		}
	});            
}

/***浏览器兼容(回车事件)***/
document.onkeydown=function(e){
	var keycode=document.all?event.keyCode:e.which;
	if(keycode==13){
		$(".search_icon").click();
	}
}